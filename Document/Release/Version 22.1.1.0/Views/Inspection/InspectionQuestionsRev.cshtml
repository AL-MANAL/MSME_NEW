                            {
                                <input type="date" id="logged_date" name="logged_date" value="@Model.logged_date.ToString("yyyy-MM-dd")" class="form-control" />
                            }
                            else
                            {
                                <input type="date" id="logged_date" name="logged_date" required class="form-control" />
                            }
