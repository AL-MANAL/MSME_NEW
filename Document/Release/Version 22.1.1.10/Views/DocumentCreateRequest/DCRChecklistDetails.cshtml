<div class="card">
    <div class="card-header header-elements-inline bg-primary">
        <h5 class="card-title">Document Create Request CheckList Details</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>

            </div>
        </div>
    </div>
    <div>
        <div class="card-header bg-white header-elements-sm-inline">
            <div class="header-elements">
                @*@if (ObjGlobal.GetCurrentUserSession().HseInsp.Contains("3"))
                {*@
                    <a class="btn bg-orange btn-labeled btn-labeled-left" data-style="radius" href='@Url.Action("DCRChecklistEdit", "DocumentCreateRequest", new { id_chklist = Model.id_chklist.ToString()  })' title="Edit" onclick="HyperLinkProgressIconFunction()">
                        <b>  <i class="icon-add-to-list"></i></b> Edit
                    </a>
                @*}*@
                @Html.ActionLink("Back to List", "DCRChecklistList",null,new { @class = "btn btn-outline bg-orange text-orange border-orange ml-3", onclick = "HyperLinkProgressIconFunction()" })
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <table class="table table-dark table-bordered table-striped table-hover bg-blue-800">
                <thead></thead>
                <tbody>
                    <tr class="row">
                        <td class="col-xs-3 col-md-2">
                            <p class="bg-brown py-1 px-2 rounded ">
                                @Html.LabelFor(model => model.checklistRef)
                            </p>
                        </td>
                        <td class="col">
                            <p class="bg-dark py-1 px-2 rounded">
                                @Html.DisplayFor(model => model.checklistRef)
                            </p>
                        </td>
                        <td class="col-xs-3 col-md-2">
                            <p class="bg-brown py-1 px-2 rounded ">
                                @Html.LabelFor(model => model.revision)
                            </p>
                        </td>
                        <td class="col">
                            <p class="bg-dark py-1 px-2 rounded">
                                @Html.DisplayFor(model => model.revision)
                            </p>
                        </td>
                    </tr>
                    <tr class="row">
                        <td class="col-xs-3 col-md-2">
                            <p class="bg-brown py-1 px-2 rounded ">
                                @Html.LabelFor(model => model.doc_title)
                            </p>
                        </td>
                        <td class="col">
                            <p class="bg-dark py-1 px-2 rounded">
                                @Html.DisplayFor(model => model.doc_title)
                            </p>
                        </td>
                        <td class="col-xs-3 col-md-2">
                            <p class="bg-brown py-1 px-2 rounded ">
                                @Html.LabelFor(model => model.dcrf_no)
                            </p>
                        </td>
                        <td class="col">
                            <p class="bg-dark py-1 px-2 rounded">
                                @Html.DisplayFor(model => model.dcrf_no)
                            </p>
                        </td>
                    </tr>
                    <tr class="row">
                        <td class="col-xs-3 col-md-2">
                            <p class="bg-brown py-1 px-2 rounded ">
                                @Html.LabelFor(model => model.memo_ref)

                        </td>
                        <td class="col">
                            <p class="bg-dark py-1 px-2 rounded">
                                @Html.DisplayFor(model => model.memo_ref)
                            </p>
                        </td>
                        <td class="col-xs-3 col-md-2">
                            <p class="bg-brown py-1 px-2 rounded ">
                                @Html.LabelFor(model => model.logged_by)
                            </p>
                        </td>
                        <td class="col">
                            <p class="bg-dark py-1 px-2 rounded">
                                @Html.DisplayFor(model => model.logged_by)
                            </p>
                        </td>
                    </tr>
            </table>

            <br />
            <br />
            <br />
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover datatable-responsive">
                    @*<table class="table table-bordered table-striped table-hover datatable-responsive" id="table1">*@
                    <thead>
                        <tr>
                            <th style="background-color: #e5eafe; color: #0099ff;">
                                Sr. No.
                            </th>
                            <th style="background-color: #e5eafe; color: #0099ff;">
                                Items
                            </th>
                            <th style="background-color: #e5eafe; color: #0099ff;">
                                Rating
                            </th>
                            <th style="background-color: #e5eafe; color: #0099ff;">
                                Comments
                            </th>                           
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.DCRQuestions != null)
                        {
                            int iSrno = 0;
                            foreach (var item in ChkList.DCRChkList)
                            {
                                iSrno = iSrno + 1;
                                n = 0;
                                foreach (var data in ViewBag.DCRSection)
                                {
                                    if (n >= m || QId == 0)
                                    {
                                        if (z == "")
                                        {
                                            <tr>
                                                <td colspan="2">@ObjGlobal.GetSectionNameById(data.Text)</td> 
                                            </tr>

                                            z = data.Text;
                                            break;
                                        }
                                        else if (Convert.ToInt32(data.Value) != QId && z != data.Text)
                                        {
                                            <tr>
                                                <td colspan="2">@ObjGlobal.GetSectionNameById(data.Text)</td>
                                            </tr>
                                            z = data.Text;
                                            break;
                                        }
                                        else if (Convert.ToInt32(data.Value) != QId && z == data.Text)
                                        {
                                            break;
                                        }
                                    }
                                    n++;
                                }
                                <tr>
                                    <td>
                                        @iSrno
                                    </td>
                                    <td>
                                        @item.id_questions
                                    </td>
                                    <td>
                                        @item.ratings
                                    </td>                                   
                                    <td>
                                        @item.comments
                                    </td>                                   
                                </tr>
                                QId = Convert.ToInt32(item.id_chklist);
                                m++;
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>         
    $(document).ready(function () {

    @if (TempData["alertdata"] != null)
    {

        @: new Noty({
        @:     text: '@TempData["alertdata"]',
        @:     type: 'error'
        @: }).show();
    }

    @if (@TempData["Successdata"] != null)
    {

        @:    new Noty({
        @:       text: '@TempData["Successdata"]',
        @:       type: 'success'
        @:   }).show();
    }
    });   
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
