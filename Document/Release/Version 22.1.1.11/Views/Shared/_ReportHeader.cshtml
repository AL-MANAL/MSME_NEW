@using System.Data
@{
    Layout = "~/Views/Shared/_PrintLayout.cshtml";
    DataSet dsCompany = new DataSet();
    if (ViewBag.CompanyInfo != null)
    {
        dsCompany = ViewBag.CompanyInfo;
    }
    var date=DateTime.Today;
}

    <div style="background-color:white">
        <div>
            <table class="table table-sm table-bordered">
                <tr class="row">
                    <td class="font-size-lg font-weight-bold">

                        <img src="@Url.Content(dsCompany.Tables[0].Rows[0]["logo"].ToString())" style="width: 150px;height: 100px;" />

                    </td>
                    <td class="font-size-lg font-weight-bold" style="text-align: center; font-weight: bold; width: 80%;" colspan="3">
                        <h1>@dsCompany.Tables[0].Rows[0]["CompanyName"].ToString()</h1>
                        <br />
                        <h3>@dsCompany.Tables[0].Rows[0]["City"].ToString()</h3>
                    </td>
                </tr>
                <tr class="row">
                    <td class="font-size-lg font-weight-bold text-center" colspan="4" style="font-weight: bold;">
                        <h2>@dsCompany.Tables[0].Rows[0]["report"].ToString()</h2>
                    </td>

                </tr>
                <tr class="row">
                    <td class="font-size-lg font-weight-bold">
                        <h6 class="font-weight-bold">Reported Date:</h6>
                    </td>
                    <td class="font-size-lg font-weight-bold">
                        <h6> @date.ToString("dd/MM/yyyy")</h6>
                    </td>
                    <td class="font-size-lg font-weight-bold">
                        <h6 class="font-weight-bold">Report No:</h6>
                    </td>
                    <td class="font-size-lg font-weight-bold">
                        <h6>@dsCompany.Tables[0].Rows[0]["sreportno"].ToString()</h6>
                    </td>
                </tr>
                <tr class="row">
                    <td colspan="4">
                       <h3>Reported by Details</h3>
                    </td>
                </tr>                
                <tr class="row">
                    <td class="font-size-lg font-weight-bold">
                        <h6 class="font-weight-bold">Name:</h6>
                    </td>
                    <td class="font-size-lg font-weight-bold" colspan="3">
                        <h6>@dsCompany.Tables[0].Rows[0]["LoggedName"].ToString()</h6>
                    </td>
                </tr>
                <tr class="row">
                    <td class="font-size-lg font-weight-bold">
                        <h6 class="font-weight-bold">Division:</h6>
                    </td>
                    <td class="font-size-lg font-weight-bold" colspan="3">
                        <h6>@dsCompany.Tables[0].Rows[0]["Loggeddivision"].ToString()</h6>
                    </td>
                </tr>
                <tr class="row">
                    <td class="font-size-lg font-weight-bold">
                        <h6 class="font-weight-bold">Department:</h6>
                    </td>
                    <td class="font-size-lg font-weight-bold" colspan="3">
                        <h6>@dsCompany.Tables[0].Rows[0]["Loggeddept"].ToString()</h6>
                    </td>
                </tr>
                <tr class="row">
                    <td class="font-size-lg font-weight-bold">
                        <h6 class="font-weight-bold">Location:</h6>
                    </td>
                    <td class="font-size-lg font-weight-bold" colspan="3">
                        <h6>@dsCompany.Tables[0].Rows[0]["LoggedLocation"].ToString()</h6>
                    </td>
                </tr>
            </table>

        </div>
    </div>