@section Scripts {
    <script>
        $('#fromtime').AnyTime_picker({
            format: '%H:%i'
        });
        $('#totime').AnyTime_picker({
            format: '%H:%i'
        });
        var showClass = 'is-visible';
        var hideClass = 'invisible';
        function setAuditType()
        {
            var audit_type = $("#audit_type option:selected").text();
            if (audit_type == "Management System Audit") {
                document.getElementById("id1").classList.remove(hideClass);
                document.getElementById("id2").classList.add(hideClass);
                $('#audit_code').prop('required', false).trigger("chosen:updated");
                $('#Audit_criteria').prop('required', true).trigger("chosen:updated");
                document.getElementById("id1").style.display = "block";
                document.getElementById("id2").style.display = "none";
                $("#audit_code").val('').trigger('change');
            }
            else
            {
                document.getElementById("id1").classList.add(hideClass);
                document.getElementById("id2").classList.remove(hideClass);
                $('#audit_code').prop('required', true).trigger("chosen:updated");
                $('#Audit_criteria').prop('required', false).trigger("chosen:updated");
                document.getElementById("id2").style.display = "block";
                document.getElementById("id1").style.display = "none";
                $("#Audit_criteria").val('').trigger('change');
                GetAuditProduct();
            }
        }
        function GetAuditProduct() {
            var audit_type = $("#audit_type").val();
            if (audit_type != "") {
                jQuery.ajax({
                    url: '@Url.Action("FunGetAuditProductList", "AuditProcess")',
                    type: 'POST',
                    dataType: "json",
                    data: { 'audit_type': audit_type },
                    success: function (result) {
                        $("#audit_code").children('option').remove();

                        if (result != null && result.length > 0) {
                            $.each(result, function (index, item) {
                                $("#audit_code").append("<option value='" + item.Value + "'>" + item.Text + "</option>");

                            });
                            $("#audit_code").trigger('change');
                            return;
                        }
                    }
                });
            }
        }
        function checkScheduleDate() {

            var dt1 = document.getElementById("AuditPlanDate").value;
            var dt2 = document.getElementById("AuditDate").value;
            if (new Date(dt2).getTime() < new Date(dt1).getTime()) {
                bootbox.alert({
                    title: 'Audit Date',
                    message: 'Audit scheduled date must be greater than Audit planned date'
                });
                $('#AuditDate').val("");
            }
            else
            {
                GetAuditor();
            }
        }
        function scheckScheduleDate(i) {

            var dt1 = document.getElementById("AuditPlanDate").value;
            var dt2 = document.getElementById("AuditDate"+i).value;
            if (new Date(dt2).getTime() < new Date(dt1).getTime()) {
                bootbox.alert({
                    title: 'Audit Date',
                    message: 'Audit scheduled date must be greater than Audit planned date'
                });
                $('#AuditDate'+i).val("");
            }
            else {
                sGetAuditor(i);
            }
        }
        function getAuditNo() {
            var sDate = new Date();
