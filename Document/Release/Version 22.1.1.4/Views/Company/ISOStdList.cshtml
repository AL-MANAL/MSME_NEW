@model IPagedList<ISOStd.Models.CompanyModels>
@{
    ViewBag.Title = "ISOStdList";
    //Layout = "~/Views/Shared/_Layout.cshtml";

    ISOStd.Models.clsGlobal Obj = new ISOStd.Models.clsGlobal();
}



