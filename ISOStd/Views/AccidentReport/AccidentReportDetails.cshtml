@model ISOStd.Models.AccidentReportModels
@{
    ViewBag.Title = "AccidentReportDetails";
    ISOStd.Models.clsGlobal Obj = new ISOStd.Models.clsGlobal();
    ISOStd.Models.AccidentReportModelsList objAccTypeList = new ISOStd.Models.AccidentReportModelsList();
    ISOStd.Models.AccidentReportModelsList objReporterList = new ISOStd.Models.AccidentReportModelsList();

    if (ViewBag.objAccTypeList != null)
    {
        objAccTypeList = ViewBag.objAccTypeList;
    }
    if (ViewBag.objReporterList != null)
    {
        objReporterList = ViewBag.objReporterList;
    }
}

