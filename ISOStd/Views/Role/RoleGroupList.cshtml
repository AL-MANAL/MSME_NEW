                    language: {
                        search: '<span>Filter:</span> _INPUT_',
                        searchPlaceholder: 'Type to filter...',
                        lengthMenu: '<span>Show:</span> _MENU_',
                        paginate: { 'first': 'First', 'last': 'Last', 'next': $('html').attr('dir') == 'rtl' ? '&larr;' : '&rarr;', 'previous': $('html').attr('dir') == 'rtl' ? '&rarr;' : '&larr;' }
                    }
                });


                var table = $('#cert').DataTable({
                   
                    lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
                    colReorder: {
                        fixedColumnsLeft: 1
                    },
                    stateSave: true,
                    //orderCellsTop: true,
                    //fixedHeader: {
                    //    header: true,

                    //},
                    //scrollX: true,
                    scrollY: '350px',
                    scrollCollapse: true,
                    //fixedHeader:true,
                    //fixedColumns: true,

                    //responsive: {
                    //    details: {
                    //        type: 'column',
                    //        target: -1
                    //    }
                    //},
                    //columnDefs: [
                    //    {
                    //        className: 'control',
                    //        orderable: false,
                    //        targets: -1
