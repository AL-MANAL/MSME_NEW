        <thead>
            <tr>
                <th>
                    Sl No
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().NC_Num)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().IssuedOn)
