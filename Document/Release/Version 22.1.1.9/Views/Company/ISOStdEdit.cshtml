@using (Html.BeginForm("ISOStdEdit", "Company", FormMethod.Post, new { enctype = "multipart/form-data", id = "form1", name = "form1" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="card">
        <div class="card-header header-elements-inline bg-primary">
            <h5 class="card-title">Audit Criteria Details</h5>
            <div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>

                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="container-fluid">
                <input type="hidden" id="StdId" name="StdId" value="@Model.StdId" />
                <table id="tabcontent" class="table table-lg">
                    <tbody>
                        <tr class="row">
                            <td class="col-xs-3 col-md-2">

                                Audit Criteria <text style="color:red;"> *</text>
                            </td>
                            <td class="col"> <input class="form-control" type="text" id="IsoName" name="IsoName" value="@Model.IsoName" required /></td>

                        </tr>
                        <tr class="row">
                            <td class="col-xs-3 col-md-2">Description<text style="color:red;"> *</text></td>
                            <td class="col">
                                <div class="editor-field">
                                    @*<input class="form-control" type="text" id="Descriptions" name="Descriptions" value="@Model.Descriptions" />*@
                                    <textarea class="form-control"  id="Descriptions" name="Descriptions">@Model.Descriptions</textarea>
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white d-flex justify-content-between align-items-center">

            @Html.ActionLink("Back to List", "ISOStdList", null, new { @class = "btn btn-outline bg-indigo-400 text-indigo-400 border-indigo-400", onclick = "HyperLinkProgressIconFunction()" })

            <button type="submit" id="btnCreate" value="Update" class="btn bg-indigo-400" onclick="ProgressIconFunction('#form1')"><i class="icon-checkmark3 mr-2"></i> Save</button>


        </div>
    </div>
}



