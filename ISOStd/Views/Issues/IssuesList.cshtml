                            @Html.DisplayFor(modelItem => item.Issue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.reporting_to)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.notified_to)
                        </td>
