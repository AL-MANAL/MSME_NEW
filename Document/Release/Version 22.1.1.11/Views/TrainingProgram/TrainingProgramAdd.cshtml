                        </th>
                        <td>
                            <input type="checkbox" id="Dec" name="Dec" checked value="Dec" />

                        </td>


                    </tr>
                    <tr>


                        <th>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.Status)
                            </div>
                        </th>
                        <td>OPEN</td>
                    </tr>
                    <tr>
                        <th>
                            <div class="editor-label">
                                @*@Html.LabelFor(model => model.remark)*@
                                Remarks
                            </div>
                        </th>

                        <td>
                            <div class="editor-field">
                                @Html.TextAreaFor(model => model.remark, new { @class = "ckeditor" })
                            </div>
                        </td>

                    </tr>
                    <tr>

                        <th>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.year)
                            </div>
                        </th>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.year, new { htmlAttributes = new { @required = "required", @maxlength = "4" } })

                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.Planned_Date)
                            </div>
                        </td>

                        <td>
                            <div class="editor-field">
                                <input type="text" id="Planned_Date" name="Planned_Date" readonly />
                            </div>
                        </td>
                    </tr>


                </table>







                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" onclick="ProgressIconFunction('#form1')" />
                    </div>
                </div>
            </div>
        </div>


        <div>
            @Html.ActionLink("Back to List", "TrainingProgramList")
        </div>


    }

    <script>
        $(function () {
            $("#Training_Topic").chosen();
            $(".chosen-select").chosen();
            $.validator.setDefaults({ ignore: ":hidden:not(.chosen-select)" });


        });



        $('#Planned_Date').datepicker({
            dateFormat: "dd/mm/yy",
            buttonImageOnly: true,
            buttonImage: '../Images/Calender.png',
            showOn: 'both',
            changeMonth: true,
            changeYear: true


        });
    </script>




































































