@section Scripts {
    <script>
        $(document).ready(function () {

           @if (TempData["alertdata"] != null)
           {
               @: new Noty({
                   @:     text: '@TempData["alertdata"]',
               @:     type: 'error'
               @: }).show();
           }
           @if (@TempData["Successdata"] != null)
           {

            @:new Noty({
                @:text: '@TempData["Successdata"]',
            @: type: 'success'
            @:}).show();
           }
        });
        $('.form-check-input-styled').uniform();
        $("#QCDocsVal").click(function () {
            if ($("#QCDocsVal").prop('checked')) {
                {
                    $(this).prop('checked', true);
                }
            }
            else {
                $(this).prop('checked', false);
                document.getElementById("QCDocsValselectall").value = "DeleteQC";
            }
        });
      
        function deleteRow(btn) {
            var row = btn.parentNode.parentNode;
            row.parentNode.removeChild(row);
        }
        function Validation() {
            var validflg = true;
            var ssnMessage = "";
            if (document.getElementById("auditor_name").value == "") {
                ssnMessage = $('#auditor_name-message');
                ssnMessage.show();
                validflg = false;
            }
            else {
                ssnMessage = $('#auditor_name-message');
                ssnMessage.hide();
            }
            if (document.getElementById("auditor_level").value == "") {
                ssnMessage = $('#auditor_level-message');
                ssnMessage.show();
                validflg = false;
            }
            else {
                ssnMessage = $('#auditor_level-message');
                ssnMessage.hide();
            }
            if (document.getElementById("contact_no").value == "") {
                ssnMessage = $('#contact_no-message');
                ssnMessage.show();
                validflg = false;
            }
            else {
                ssnMessage = $('#contact_no-message');
                ssnMessage.hide();
            }
            if (document.getElementById("email_address").value == "") {
                ssnMessage = $('#email_address-message');
                ssnMessage.show();
                validflg = false;
            }
            else {
                ssnMessage = $('#email_address-message');
                ssnMessage.hide();
            }

            return validflg;
        }

