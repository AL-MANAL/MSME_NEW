@model ISOStd.Models.ExternalAuditorModels

@{
    ViewBag.Title = "AddExternalAuditor";
}

<div class="groupedassets margin10">
    <span class="groupedassetshead margin10 onestphdcolor">Add External Auditor </span>
</div>
<div id="divmsg">
    @if (TempData["alertdata"] != null)
    {
        <span class="errMsg" style="color: red;font-weight: bold;">@TempData["alertdata"]</span>
        }
    @if (TempData["Successdata"] != null)
    {
        <span class="errMsg" style="color: green; font-weight: bold;">@TempData["Successdata"]</span>
        }
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ExternalAuditorModels</legend>
        <table style="width: 100%">
            <tr>
                <td>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Auditor_name)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Auditor_name)
                        @Html.ValidationMessageFor(model => model.Auditor_name)
                    </div>
                </td>
                <td>
                    <div class="editor-label">
                        Certificate Name
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @*@Html.EditorFor(model => model.CertName)*@
                        @if (ViewBag.CertBodyList != null)
                        {
                            <select id="CertId" name="CertId" required="">
                                <option value='' hidden>Select</option>
                                @foreach (var item in ViewBag.CertBodyList)
                                {
                                    <option value='@item.Value'>@item.Text</option>
                                }
                            </select>
                        }

                        @Html.ValidationMessageFor(model => model.CertID)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.emailaddress)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.emailaddress)
                        @Html.ValidationMessageFor(model => model.emailaddress)
                    </div>
                </td>
                <td>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.PhoneNumber)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.PhoneNumber)
                        @Html.ValidationMessageFor(model => model.PhoneNumber)
                    </div>
                </td>
            </tr>
        </table>
    </fieldset>
    <br />
    <div style="width: 100%; text-align: center;">
        @Html.ActionLink("Back to List", "ExternalAuditorList", "ExternalAudit", new {@class = "ActionLink", onclick="HyperLinkProgressIconFunction()"})
        <input type="submit" value="Create" />
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
