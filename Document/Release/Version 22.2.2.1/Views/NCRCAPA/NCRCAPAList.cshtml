                    jQuery.ajax({
                         url: '@Url.Action("NCRCAPADocDelete", "NCRCAPA")',
                        type: 'POST',
                        dataType: "json",
                        data: { 'CAR_ID': CAR_ID },
                        success: function (result) {




                            window.location.href =
                                window.location.protocol + "//" +
                                window.location.host +
                                window.location.pathname

                        }
                    });
                    return true;
                }
                   else if (r == false) {

                       bootbox.hideAll();
                       return false;

                }

                }
            });


