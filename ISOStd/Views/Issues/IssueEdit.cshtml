                        <div class="editor-label">
                            @Html.LabelFor(model => model.Evidence)
                        </div>
                    </td>
                    <td class="col">
                        <div class="editor-field">
                            <input class="bootstrap-uploader" data-fouc type="file" name="file" id="file" value="" onchange="FileFormatValidation(this)" accept=".pdf" />
                            @if (Model.Evidence != "")
