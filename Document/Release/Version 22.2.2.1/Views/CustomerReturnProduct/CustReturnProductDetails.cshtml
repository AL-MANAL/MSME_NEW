<div class="card">

    <div class="card-header header-elements-inline bg-primary">
        <h5 class="card-title">Customer Property Log Detail</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>

            </div>
        </div>
    </div>

    <div>
        <div class="card-header bg-white header-elements-sm-inline">

            <div class="header-elements">
                <div class="mt-2 mt-sm-0">

                    @if (Obj.GetCurrentUserSession().CustReturnProcuct.Contains("3"))
                    {
                        <a class="btn bg-orange btn-labeled btn-labeled-left" data-style="radius" href='@Url.Action("CustReturnProductEdit", "CustomerReturnProduct", new { id_return_product = Model.id_return_product })' title="Edit" onclick="HyperLinkProgressIconFunction()">
