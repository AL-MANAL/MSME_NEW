                            <p class="bg-brown py-1 px-2 rounded ">
                                @Html.DisplayNameFor(model => model.report_no)
                            </p>
                        </td>
                        <td class="col-xs-6 col-md-4">
                            <p class="bg-dark py-1 px-2 rounded">
                                @Html.DisplayFor(model => model.report_no)
                            </p>
                        </td>
                    </tr>
                    <tr class="row">
                        <td class="col-xs-3 col-md-2">
