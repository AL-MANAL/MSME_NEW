<div class="card">
    <div class="card-header header-elements-inline bg-primary">
        <h5 class="card-title">Safety Observation Card Details</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
            </div>
        </div>
    </div>
    <div>
        <div class="card-header bg-white header-elements-sm-inline">

            <div class="header-elements">
                @if (Obj.GetCurrentUserSession().ObservCard.Contains("3"))
                {
                    <a class="btn bg-orange btn-labeled btn-labeled-left" data-style="radius" href='@Url.Action("SafetyObservationEdit", "SafetyObservation", new { id_safety_observation = Model.id_safety_observation }   )' title="Edit" onclick="HyperLinkProgressIconFunction()">
                        <b>  <i class="icon-add-to-list"></i></b> Edit
                    </a>
                }
                @Html.ActionLink("Back to List", "SafetyObservationList", null, new { @class = "btn btn-outline bg-orange text-orange border-orange ml-3", onclick = "HyperLinkProgressIconFunction()" })
            </div>
        </div>
    </div>
