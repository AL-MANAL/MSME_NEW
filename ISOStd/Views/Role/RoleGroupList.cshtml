<div class="card">
      <div class="card-header header-elements-inline bg-primary">
          <h5 class="card-title">Manage Access Privileges</h5>
            <div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>
                </div>
            </div>
        </div>
<div class="card-body">
                <table class="table table-bordered table-striped table-hover datatable-responsive" id="cert">
                    <thead>

                        <tr>
                         <th>
                            Sl.No
                        </th>
                        <th>
                             Role
                        </th>
                       <th>
                             Menu Access
                        </th>
                        <th>
                             Division Access
                        </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count() > 0)
                        {
                            int i = 0;
                           
                            foreach (var item in Model)
                            {
                                
                                i = i + 1;
                                <tr>
                                     <td>
	                            @i
                                    </td>
                        <td>                          
                                @Html.DisplayFor(modelItem => item.RoleName)                            
                        </td>
                       
                        <td>
  			<a href='@Url.Action("AccessList", "Access", new { RoleId= item.role_id,branch_id= item.branch_id,appl_branch= item.appl_branch })' title="Access" onclick="HyperLinkProgressIconFunction()">
                          <span class="icon-users4"></span>
                        </a>
                            </td>
                                      <td>
  			<a href='@Url.Action("AddAccessTree", "AccessTree", new { RoleId= item.role_id,branch_id= item.branch_id,appl_branch= item.appl_branch })' title="Access" onclick="HyperLinkProgressIconFunction()">
                          <span class="icon-users4"></span>
                        </a>
                            </td>
              </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>

</div>

   
@section Scripts {
    <script>

        $(document).ready(function () {

        @if (TempData["alertdata"] != null)
        {

           @: new Noty({
                                               @:     text: '@TempData["alertdata"]',
                                               @:     type: 'error'
                                               @: }).show();
                                      }

        @if (@TempData["Successdata"] != null)
        {

        @:    new Noty({
                                             @:       text: '@TempData["Successdata"]',
                                             @:       type: 'success'
         @:}).show();
        }
        });


        var cert = function () {


            //
            // Setup module components
            //

            // Basic Datatable examples
            var _componentDatatableBasic = function () {
                if (!$().DataTable) {
                    console.warn('Warning - datatables.min.js is not loaded.');
                    return;
                }

                //Setting datatable defaults
                $.extend($.fn.dataTable.defaults, {
