                </tr>
                <tr>
                    <td>
                        <div class="display-label">
                            Deduction
                        </div>
                    </td>
                    <td>
                        <div class="display-field">
                            @objTimeSheet.sDeduction
                        </div>
                    </td>
                </tr>
            </table>

        }
    </div>
                        }

}

@section Scripts {
    <script>
        $(function () {

            $('#FromDate').datepicker({
                dateFormat: "dd/mm/yy",
                buttonImageOnly: true,
                buttonImage: '../Images/Calender.png',
                showOn: 'both',
                changeMonth: true,
                changeYear: true,
                gotoCurrent: true,                
            });
            $("#FromDate").datepicker("setDate", new Date());

        });

    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
