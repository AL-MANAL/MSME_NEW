                                                    {
                                                        foreach (var item in ViewBag.Criticality)
                                                        {
                                                            if (item.Value == objList.InspectionQstList[index].criticality)
                                                            {
                                                                <option value='@item.Value' selected>@item.Text</option>
                                                            }
                                                            else
                                                            {
