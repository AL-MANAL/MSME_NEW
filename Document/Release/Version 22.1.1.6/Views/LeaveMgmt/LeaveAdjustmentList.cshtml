@using PagedList;
@using PagedList.Mvc;

@model IPagedList<ISOStd.Models.LeaveMgmtModels>

@{
    ViewBag.Title = "";
}

<div class="groupedassets margin10">
    <span class="groupedassetshead margin10 onestphdcolor">Leave Adjustmen List</span>
</div>

<br />
<div id="divmsg">
    @if (TempData["alertdata"] != null)
    {
        <span class="errMsg" style="color: red; font-weight: bold;">@TempData["alertdata"]</span>
    }
    @if (TempData["Successdata"] != null)
    {
        <span class="errMsg" style="color: green; font-weight: bold;">@TempData["Successdata"]</span>
    }
</div>


<div>
    @Html.ActionLink("Add New", "LeaveAdjustment", null, new { @class = "ActionLink", onclick = "HyperLinkProgressIconFunction()" })
</div>

<br />
<br />


<div id="content">
    <table id="leave">
        <thead>
            <tr>
                <th style="width: 40px; min-width: 40px; max-width: 100px;">Sl No
                </th>
                <th style="width: 150px; min-width: 150px; max-width: 150px;">
                    @Html.DisplayNameFor(model => model.First().emp_no)
                </th>
                 <th style="width: 150px; min-width: 150px; max-width: 150px;">
                    @Html.DisplayNameFor(model => model.First().emp_firstname)
                </th>
                <th style="width: 150px; min-width: 150px; max-width: 150px;">
                    @Html.DisplayNameFor(model => model.First().syear)
                </th>
                <th style="width: 150px; min-width: 150px; max-width: 150px;">
                    @Html.DisplayNameFor(model => model.First().adj_type)
                </th>
                <th style="width: 150px; min-width: 150px; max-width: 150px;">
                    @Html.DisplayNameFor(model => model.First().days)
                </th>
                <th style="width: 150px; min-width: 150px; max-width: 150px;">
                    @Html.DisplayNameFor(model => model.First().op_type)
                </th>
              

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count() > 0)
            {
                int i = 0;
                foreach (var item in Model)
                {
                    i = i + 1;
                <tr>
                    <td style="width: 40px; min-width: 40px; max-width: 40px; word-wrap: break-word">
                        @i
                    </td>
                    <td style="width: 150px; min-width: 150px; max-width: 150px; word-wrap: break-word">
                        @Html.DisplayFor(modelItem => item.emp_no)
                    </td>
                      <td style="width: 150px; min-width: 150px; max-width: 150px; word-wrap: break-word">
                        @Html.DisplayFor(modelItem => item.emp_firstname)
                    </td>
                    <td style="width: 150px; min-width: 150px; max-width: 150px; word-wrap: break-word">
                        @Html.DisplayFor(modelItem => item.syear)
                    </td>
                    <td style="width: 150px; min-width: 150px; max-width: 150px; word-wrap: break-word">
                        @Html.DisplayFor(modelItem => item.adj_type)
                    </td>
                    <td style="width: 150px; min-width: 150px; max-width: 150px; word-wrap: break-word">
                        @Html.DisplayFor(modelItem => item.days)
                    </td>
                    <td style="width: 150px; min-width: 150px; max-width: 150px; word-wrap: break-word">
                        @Html.DisplayFor(modelItem => item.op_type)
                    </td>
                </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10">
                        <div style="text-align: center;">
                            <h4 style="color: grey;">No data exists</h4>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript" charset="utf8" src="~/Scripts/jquery-3.1.1.js"></script>
     @Styles.Render("~/Content/popover")
    <script>
        var $x = jQuery.noConflict();
        $x(document).ready(function () {
            // DataTable
            var table = $x('#leave').DataTable(
                {
                    fixedHeader: true,
                    colReorder: true

                });
        });

    </script>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
    </script>
}
