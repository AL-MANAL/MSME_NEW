                            @Html.DisplayFor(modelItem => item.IssueType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Effect)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Impact)
                        </td>
