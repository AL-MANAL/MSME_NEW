                    @Html.ActionLink("Back to List", "RiskRegisterHRREvaluationList", new { Risk_Reg_Activity_Id = @ViewBag.ActivityId }, new { @class = "btn btn-outline bg-orange text-orange border-orange", onclick = "HyperLinkProgressIconFunction()" })

